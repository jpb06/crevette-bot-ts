{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist/js",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": true,
    "lib": [
      "dom",
      "es7"
    ]
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}